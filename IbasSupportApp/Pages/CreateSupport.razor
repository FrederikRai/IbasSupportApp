@page "/create-support"
@using IbasSupportApp.Models
@inject IbasSupportApp.Services.SupportApiService SupportApiService

<h3>Opret Supporthenvendelse</h3>

<EditForm Model="@message" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Navn:</label><br />
        <InputText @bind-Value="message.Name" class="form-control" />
        <ValidationMessage For="@(() => message.Name)" />
    </div>

    <div class="form-group">
        <label>Email:</label><br />
        <InputText @bind-Value="message.Email" class="form-control" />
        <ValidationMessage For="@(() => message.Email)" />
    </div>

    <div class="form-group">
        <label>Emne:</label><br />
        <InputText @bind-Value="message.Subject" class="form-control" />
        <ValidationMessage For="@(() => message.Subject)" />
    </div>

    <div class="form-group">
        <label>Besked:</label><br />
        <InputTextArea @bind-Value="message.Message" class="form-control" rows="4" />
        <ValidationMessage For="@(() => message.Message)" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Opret henvendelse</button>
</EditForm>

@if (successMessage is not null)
{
    <p class="text-success mt-3">@successMessage</p>
}
@if (errorMessage is not null)
{
    <p class="text-danger mt-3">@errorMessage</p>
}

@code {
    private SupportMessage message = new();
    private string? successMessage;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        var result = await SupportApiService.SendSupportMessageAsync(message);

        if (result)
        {
            successMessage = "Henvendelsen blev sendt til API’et! 🎉";
            errorMessage = null;
            message = new(); // nulstil formularen
        }
        else
        {
            errorMessage = "Der opstod en fejl under afsendelsen 😞";
            successMessage = null;
        }
    }
}
